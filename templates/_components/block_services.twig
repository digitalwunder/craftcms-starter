<section class="af-services">
  <!-- TODO: TITLE -->
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-7">
        {% for item in block.items.all() %}
          <div class="card">
            <div class="row">
              <div class="col-lg-3">
                {% include '_atoms/image' with {image: item.icon} %}
              </div>
              <div class="col-lg-9">
                <div class="card-body">
                  <h3>{{item.headline}}</h3>
                  {{item.text}}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="col-lg-4 offset-lg-1">
        <h2>{{block.headline}}</h2>
        <div class="af-services_content-text">
          {{block.text}}
        </div>
        <div class="af-services_content-button">
          {% include '_atoms/link' with {link: block.button, class: 'btn btn-outline-dark'} %}
        </div>
      </div>
    </div>
  </div>
</section>
