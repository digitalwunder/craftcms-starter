    <div class="row align-items-center">
      <div class="col-lg-4 offset-lg-1">
        {% include '_atoms/image' with {image: block.image} %}
      </div>
      <div class="col-lg-6">
        <h2>{{block.headline}}</h2>
        <div class="af-text-module_content-text">
